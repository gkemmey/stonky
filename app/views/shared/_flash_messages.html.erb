<div id="flash_messages_container" class="w-full max-w-md">

  <% [:success, :warning].tap do |ok_keys| %>
    <% flash.each do |key, message| %>
      <% next unless ok_keys.include?(key.to_sym) %>

      <% (
        case key.to_sym
          when :success
            "text-green-600 bg-green-50 border border-green-400"
          when :warning
            "text-yellow-600 bg-yellow-50 border border-yellow-400"
        end
      ).tap do |colors| %>

        <div class="px-4 py-3 mb-8 rounded <%= colors %>"
             role="alert">
          <p><%= message %></p>
        </div>

      <% end %>

    <% end %>
  <% end %>

</div>
