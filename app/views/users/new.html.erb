<h2 class="text-2xl font-bold">Sign up</h2>

<div class="w-full max-w-md mt-8">
  <%= tailwind_form_with model: @user do |f| %>
    <div class="grid grid-cols-1 gap-6 bg-gr">
      <%= f.errors %>

      <%= f.label :username do %>
        <%= f.text_field :username, autocomplete: "off" %>
      <% end %>

      <%= f.label :password do %>
        <%= f.password_field :password, autocomplete: "off" %>
      <% end %>

      <%= f.label :password_confirmation do %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      <% end %>

      <%= f.submit "Sign up" %>

      <p>
        Already have one account? Sign in
        <%= link_to "here", new_session_path, class: "underline text-blue-600 hover:text-blue-800" %>.
      </p>
    </div>
  <% end %>
</div>
